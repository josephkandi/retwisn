extends layout/post_layout

block post_content
  .posts(ng-controller="UserPostsController",ng-init="username='#{username}'; loggedInUser='#{session.username}'")
    h2 #{username}
    - var followText = following ? "Unfollow" : "Follow"
    button(ng-hide="isSelfObserving",ng-class="followButtonClass",ng-disabled="followButtonDisabled",ng-click="followAction()") {{followButtonText}}
    ul.list-group
      li.list-group-item(ng-repeat="post in posts")
        .row
          .col-md-12
            span {{post.message}}
        .row
          .col-md-4.col-md-offset-8
            span {{post.date | date}}